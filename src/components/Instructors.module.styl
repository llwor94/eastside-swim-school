@import '../styles/utils'

.instructors
  padding 200px 0
  margin 150px auto
  background-image linear-gradient(to top right, primary-light, primary-dark)
  clip-path polygon(0% 10vh, 100% 0%, 100% calc(100% - 10vh), 0% 100%)

.container
  max-width 1024px
  padding 0 15px
  margin 0 auto

.heading
  margin-bottom 3rem

.img
  width: 100%;
  height: 100%;
  object-fit: cover;

.instructor
  padding: 3rem;

.img-wrapper
  width: 250px;
  height: 250px;
  clip-path: circle(45%)

.grow
  flex-grow: 1

.mr.mr
  margin-right: 1rem;

.wrapper
  flex(column, center)
  height 100%

.first
  order -1

.align-right
  text-align: right

.bottom-bar
  flex(row, flex-start, center)
  & > *
    margin-right 1rem