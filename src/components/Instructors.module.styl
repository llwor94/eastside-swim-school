@import '../styles/utils'

.bline
  display flex
  flex-direction column
  align-items center

.instructors
  padding 200px 0
  margin 150px auto
  background-image linear-gradient(to top right, primary-light, primary-dark)
  clip-path polygon(0% 10vh, 100% 0%, 100% calc(100% - 10vh), 0% 100%)

.container
  max-width 1024px
  padding 0 15px
  margin 0 auto

.heading
  margin-bottom 3rem

.img
  width 100%
  height 100%
  border-radius 50%
  object-fit cover

.instructor
  padding: 5rem 3rem;

  h2
    text-align center
  .bline::after
    content ""
    display block
    width 80%
    height 2px
    background-color #eee
    margin 40px auto

.img-wrapper
  width 150px
  border 3px solid primary-main
  background black
  height 150px
  display flex
  position relative
  border-radius 50%
  justify-content center
  align-items center

.grow
  flex-grow: 1
  border 1px solid transparent
  transition: all .2s;

  &:hover {
    .img-wrapper {
      //transform scale(1.1)
    }

    .img {
      opacity: .4
    }


    .mr.mr {
      display: inline-block
      position absolute
      color white
      text-align center
      width 100%
      font-weight bold

      &:hover {
        background-color transparent
      }
    }
  }


.mr.mr
  display none
  @media (min-width 600px)
    margin-right: 1rem

.wrapper
  flex(column, flex-start, center)
  height 100%
  h3
    line-height 1.5
    text-align center


.align-right
  text-align: right

.griditem
  padding 2rem

.pic
  order -1
  @media (min-width 600px)
    order 0

.first
  order -1

.bottom-bar
  display flex
  flex-direction column
  @media (min-width 600px)
    flex()
  a
    flex-grow 1
    margin-bottom 20px
    @media (min-width 600px)
      margin-bottom 0

.bottom-line-wrapper
  &:not(:last-child) .bottom-line::after
    content ""
    width 80%
    height 2px
    background-color #eee
    margin 40px auto

.icon
  cursor pointer
  &:hover
    color rgba(0, 0, 0, 0.6)

.modal-img
  width 100%

.link
  a
    text-align center
    background-color #65bb4b
    color white
    font-size 16px
    text-transform uppercase
    font-weight bold
