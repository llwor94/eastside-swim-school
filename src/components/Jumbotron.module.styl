@import '../styles/utils'

.wrapper
  height 95vh
  margin-top 64px
  background linear-gradient(
    to right bottom,
    rgba(primary-light, 0.8),
    rgba(primary-dark, 0.8)
    )
  background-size cover
  position relative
  background-position center
  flex(column, center, center)

.text-box
  color white
  text-transform uppercase
  text-align center
  flex(column)
  margin-bottom 10px

.btn.btn
  font-size unit(20/16, 'rem')
  letter-spacing: 5px
  padding-left 45px
  padding-right 45px
  background rgba(25,43,53,.9)
  color: white



.title
  text-transform uppercase
  font-size: 5.5rem
  color: white
  text-align center


.embedded
  background rgba(25,43,53,.9)
  padding 10px
  border-radius 4px
  position absolute
  right 30px
  bottom 50px
  z-index 10

  .heading
    display flex
    justify-content space-between
    align-items center
    padding-bottom 10px

  h5
    color white

  iframe
    border 0
    border-radius 4px
    width 500px

    .c3
      padding 0

